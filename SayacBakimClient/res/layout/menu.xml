<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="DashBoard"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="normal" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.22"
        android:background="@drawable/background" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="54dp"
                    android:src="@drawable/modembirlestirme" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_alignTop="@+id/imageButton1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/isemirleri" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/imageButton2"
                    android:layout_marginRight="22dp"
                    android:src="@drawable/fotoyukle" />
                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_above="@+id/textView4"
                    android:layout_alignLeft="@+id/textView2"
                    android:layout_alignRight="@+id/textView2"
                    android:layout_alignTop="@+id/imageButton4"
                    android:src="@drawable/yardim" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/textView1"
                    android:layout_below="@+id/textView1"
                    android:layout_marginTop="43dp"
                    android:src="@drawable/addh" />				<ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="75dp"
                    android:layout_height="70dp"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignTop="@+id/imageButton5"
                    android:src="@drawable/guncelle" />
				
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageButton1"
                    android:layout_alignRight="@+id/imageButton1"
                    android:layout_below="@+id/imageButton1"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/menu_network"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_alignLeft="@+id/imageButton2"
                    android:layout_alignRight="@+id/imageButton2"
                    android:gravity="center" 
                    android:text="@string/menu_work"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageButton4"
                    android:layout_alignRight="@+id/imageButton4"
                    android:layout_below="@+id/imageButton4"
                    android:text="@string/menu_pano"
                    android:gravity="center" 
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageButton3"
                    android:layout_alignRight="@+id/imageButton3"
                    android:layout_below="@+id/imageButton3"
                    android:text="@string/menu_yardim"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center" 
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignLeft="@+id/imageButton5"
                    android:layout_alignRight="@+id/imageButton5"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/foto_Esleme"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_alignLeft="@+id/imageButton6"
                    android:layout_alignRight="@+id/imageButton6"
                    android:gravity="center"
                    android:text="@string/updateApp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright @ 2013 Aktek BiliÅŸim"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/footerlogo" />
    </RelativeLayout>

</LinearLayout>
