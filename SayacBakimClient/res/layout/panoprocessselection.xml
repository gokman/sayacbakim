<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp" >

    <ImageButton
        android:id="@+id/btnListWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/guncelle" />

     <TextView
         android:id="@+id/TextView01"
         android:layout_width="69dp"
         android:layout_height="wrap_content"
         android:text="İş Emri Listesi"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/white" />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_marginLeft="20dp">

    <ImageButton
        android:id="@+id/btnNewWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/modembirlestirme" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        
        android:text="Yeni İş Emri"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

</LinearLayout>

</LinearLayout>